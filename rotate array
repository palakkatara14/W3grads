class Solution {
    public void rotate(int[] nums, int k) {
        int n=nums.length;
        k=k%n;
        reverse(nums,0,n-1);
        reverse(nums,0,k-1);
        reverse(nums,k,n-1);
        

    }
    public static void reverse(int[] nums,int i,int j){
       //reversal algorithm
        while(i<j){
            int c=nums[i];
            nums[i]=nums[j];
            nums[j]=c;
            i++;
            j--;
        }
    }
}
